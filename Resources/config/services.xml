    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="bb_code_parser" class="Valantir\ForumBundle\Service\BBCodeParser">
            <argument type="service" id="service_container"/>
        </service>

        <service id="breadcrumb_service" class="Valantir\ForumBundle\Service\Breadcrumb">
            <argument type="service" id="service_container"/>
        </service>
    </services>

</container>
