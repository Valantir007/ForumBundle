<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="admin_topic_index" path="/list/{forumId}">
        <default key="_controller">ValantirForumBundle:AdminTopic:index</default>
        <requirement key="forumId">\d+</requirement>
    </route>
    
    <route id="admin_topic_show_quotation" path="/{slug}/quotation/{quotationPostId}">
        <default key="_controller">ValantirForumBundle:AdminTopic:showTopic</default>
        <default key="quotationPostId"></default>
    </route>

    <route id="admin_topic_show" path="/{slug}">
        <default key="_controller">ValantirForumBundle:AdminTopic:showTopic</default>
    </route>
</routes>
